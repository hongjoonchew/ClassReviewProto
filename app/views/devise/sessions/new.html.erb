<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :login %><br />
    <font color = "black">
    <%= f.text_field :login, autofocus: true %></font>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <font color = "black">
    <%= f.password_field :password, autocomplete: "off" %></font>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions btn btn-default btn-lg">
    <%= f.submit "Log in" %>
  </div>
<% end %>
<div class="actions btn btn-default btn-lg">
<%= render "devise/shared/links" %>
  </div>
