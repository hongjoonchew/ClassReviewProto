        th, td {
        border-radius: 0.6em 0 0 0.6em;
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid black;

        }

        tbody tr td:first-child
        {
        border-radius: 0.6em 0 0 0.6em;
        background: #e0e2e0;
        color: black;
        width: 20%;
        }
        tbody td:nth-child(2)
        {
        border-radius: 0 0.6em 0.6em 0;
        background: #e0e2e0;
        color: black;
            width: 50%;
        }

        tbody tr:hover td:first-child
        {
        border-radius: 0.6em 0 0 0.6em;
        background: #e0e2e0;
        color: red;
            width: 20%;
        }
        tbody td:first-child
        {
        border-radius: 0 0.6em 0.6em 0;
