<head>
    <style>
        div{
        border-radius: 0.6em 0 0 0.6em;
        }
        table {
        border-radius: 0.6em 0 0 0.6em;
        border-collapse: collapse;
        width: 100%;
        color:black;
        background-color:#e0e2e0;
        }

        th, td {
        border-radius: 0.6em 0 0 0.6em;
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid black;
        
        }
        
        tbody tr td:first-child
        {
        border-radius: 0.6em 0 0 0.6em;
        background: #5fdd42;
        color: black;
        width: 50%;
        }
        tbody td:nth-child(2)
        {
        border-radius: 0 0.6em 0.6em 0;
        background: #5fdd42;
        color: black;
            width: 50%;
        }
        
        tbody tr:hover td:first-child
        {
        border-radius: 0.6em 0 0 0.6em;
        background: #5fdd42;
        color: white;
            width: 50%;
        }
        tbody tr:hover td:nth-child(2)
        {
        border-radius: 0 0.6em 0.6em 0;
        background: #5fdd42;
        color: white;
            width: 50%;
        }

        
</style>
</head>

<body>

<div class="container">
    <div class="row">
        <div class="cols-xs-10">

            <table>
                <tr bgcolor="black" style="color:yellow;">
                <b>
                <th>Course </th>
                <th>Description</th>
                </b>
                </tr>

                <% @data.each do |data| %>
                <tr>
                <td><%= data.course_id%></td>
                <td><%=data.description %></td>
                </tr>
                <% end %>
            </div>
        </div>
    </div>
</table>
</body>
