<!DOCTYPE html>
<html>
  <head>
    <title>ClassReview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <td><%= link_to "Home", root_path  %></td>
    <% if user_signed_in? %>
        <%= link_to "Logout ", destroy_user_session_path,:method=>:delete, :data => { :no_turbolink => false } %>
    <% else %>
        <td><%= link_to "Login", new_user_session_path  %></td>
        <td><%= link_to "Sign Up", new_user_registration_path  %></td>
    <% end %>
<%= link_to "Help", home_help_path %>
<p id="notice"><%= notice %></p>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
